%h1 Listing students

%table
  %thead
    %tr
      %th Name
      %th Course
      %th
      %th
      %th

  %tbody
    - @students.each do |student|
      %tr
        %td= student.name
        %td= link_to student.context.resource_links.first.title, platform_resource_link_path(student.context.platform, student.context.resource_links.first)
        %td= link_to 'Show', student
        %td= link_to 'Edit', edit_student_path(student)
        %td= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Student', new_student_path
